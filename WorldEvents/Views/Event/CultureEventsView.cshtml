@{
    ViewData["Title"] = "Culture Events";
    //Layout = "_LayoutEvents";
}

<div id="cultCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#cultCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#cultCarousel" data-slide-to="1"></li>
        <li data-target="#cultCarousel" data-slide-to="2"></li>
        <li data-target="#cultCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/articles/1.jpg" alt="A1" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Music World Events
                    <a class="btn btn-default" href="">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/articles/2.jpg" alt="A2" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                   Fashion World Event
                    <a class="btn btn-default" href="">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/articles/3.jpg" alt="A3" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Food innovations
                    <a class="btn btn-default" href="">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#cultCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#cultCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
