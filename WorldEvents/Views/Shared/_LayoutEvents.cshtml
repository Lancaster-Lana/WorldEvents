                            <li><a href="#">Archived Events</a></li>
                        </ul>

                    </li>
                </ul>

                <!-- EVENTS pages container -->
                <div class="scroll">
                    <div class="scrollContainer">
                        <div id="AllEvents" class="panel">
                            @await Html.PartialAsync("AllEventsView")
                        </div>

                        <div id="CultureEvents" class="panel">
                            @await Html.PartialAsync("CultureEventsView")
                        </div>

                        <div id="TechEvents" class="panel">
                            @await Html.PartialAsync("TechEventsView")
                        </div>

                        <div id="PoliticalEvents" class="panel">
                            @Html.Partial("PoliticalEventsView")
                        </div>


                        <div id="contactus" class="panel" >
                            <h2 class="card-header">Contact Us</h2>
                            <p>Proin malesuada rutrum sem et consequat. </p>
                            <h5>Mailing Address</h5>
                            Tel:111-333  <br />

                            <div class="cleaner cleaner_h40"></div>

                            <div id="contact_form">
                                <form method="post" name="contact" action="#">
                                    <input type="hidden" name="post" value="Send" />
                                    <label for="author2">Name:</label>
                                    <input type="text" id="author2" name="author" class="required input_field" />
                                    <div class="cleaner_h10"></div>
                                    <label for="email">Email:</label>
                                    <input type="text" id="email" name="email" class="validate-email required input_field" />
                                    <div class="cleaner_h10"></div>
                                    <label for="text">Message:</label>
                                    <textarea id="text" name="text" rows="0" cols="0" class="required"></textarea>
                                    <div class="cleaner_h10"></div>
                                    <input type="submit" class="submit_btn float_l" name="submit" id="submit" value="Send" />
                                    <input type="reset" class="submit_btn float_r" name="reset" id="reset" value="Reset" />
                                </form>
                            </div>

                        </div>

                        <div class="">
                            @RenderBody()
                        </div>
                    </div>
                </div>


